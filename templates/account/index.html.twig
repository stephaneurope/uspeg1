{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

  

    <!--Intro Section-->
    <section class="view intro-2">
      <div class="mask rgba-stylish-strong h-100 d-flex justify-content-center align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5">

              <!--Form with header-->
              <div class="card wow fadeIn" data-wow-delay="0.3s">
                <div class="card-body">

                  <!--Header-->
                  <div class="form-header purple-gradient text-light">
                    <h3><i class="fas fa-user mt-2 mb-2 text-light"></i> Connexion:</h3>
                  </div>

                  <!--Body-->
                  <div class="md-form">
                    <i class="fas fa-user prefix white-text text-light"></i>
                    <input type="text" id="orangeForm-name" class="form-control">
                    <label for="orangeForm-name">Ton nom</label>
                  </div>
                  <div class="md-form">
                    <i class="fas fa-envelope prefix white-text text-light "></i>
                    <input type="text" id="orangeForm-email" class="form-control">
                    <label for="orangeForm-email">Ton email</label>
                  </div>

                  <div class="md-form">
                    <i class="fas fa-lock prefix white-text text-light"></i>
                    <input type="password" id="orangeForm-pass" class="form-control">
                    <label for="orangeForm-pass">Ton mot de passe</label>
                  </div>

                  <div class="text-center">
                    <button class="btn btn-success btn-lg text-light">Connexion</button>
                    <hr>
                    
                  </div>

                </div>
              </div>
              <!--/Form with header-->

            </div>
          </div>
        </div>
      </div>
    </section>

  </header>
  <!--Main Navigation-->
{% endblock %}

