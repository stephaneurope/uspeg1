{% extends 'base.html.twig' %}

{% block title %}

	{% form_theme form _self %}
{% endblock %}

{% block body %}
{% set name = 'Valider la commande de '~ commande.adherent.firstname ~ ' ' ~ commande.adherent.lastname %}
{% include "header_title.html.twig" %}

	<div class="container mt-3">
		
	

<table class="table table-hover">
							<thead>
								<tr>

									<th class="text-center">En commande depuis le</th>
									<th class="text-center">Produit</th>
									<th class="text-center">Catégorie</th>
									<th class="text-center">Quantité</th>

									<th></th>
								</tr>
							</thead>
							
							<tbody>

								<td class="text-center">
									{{commande.datecommande|date("d/m/Y")}}

								</td>
								<td class="text-center">{{commande.produit.title}}</td>
								<td class="text-center">{{commande.produit.categoryproduit.title}}</td>
								<td class="text-center">
									<span class="">{{commande.qte}}</span>

								</td>

								
							</tbody>
								
						</tr>				
				</table>
		{{ form_start(form) }}
		{{ form_widget(form,{ 'attr' : { 'style':'display:none'} }) }}

		<button type="submit" class="btn btn-primary">Valider la commande</button>
		{{ form_end(form) }}
	</div>


{% endblock %}
