{% extends 'base.html.twig' %}
{% block title %}Bienvenue sur la Boutique
{% endblock %}
{% block body %}
	<div class="container mt-3">
		<div>
			<div class="container mt-3">
				<div class="row ">
					<div class="jumbotron">
						<h1 class="display-4">Gestion de stock des équipements sportif</h1>

						<hr class="my-2">
						<h3 class="text-center">Choisissez votre catégorie</h3>
					</div>
				</div>
			</div>
			<div class="container">
				<div class="row">
					{% for categories in category %}
						<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
							<div class="boxe carde">
								<div class="box cardImg">
									<img src="https://image.freepik.com/psd-gratuit/cap-maquette_1310-498.jpg" alt="...">
								</div>
								<div class="info">
									<h3>{{categories.title}}</h3>
									<p>
										<span></span>
										</p>
									<a href="{{ path('category_produit', {'id': categories.id}) }}" class="btn btn-primary mt-3">Voir</a>
								</div>
							</div>

						</div>
					{% endfor %}
				</div>
			</div>
		{% endblock %}
