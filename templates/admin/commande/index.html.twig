{% extends 'base.html.twig' %}

{% block title %}Commande
{% endblock %}

{% block body %}
{% set name = "Attributions d'équipements" %}
	{% include "header_title.html.twig" %}

	<div class="container mt-3">
		
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Rechercher ..."/>

		</div>

		<div class="container">
			<div class="row">
				<div class="col-sm"></div>
				<div class="col-sm"></div>
				<div class="col-sm-3 mb-2"></div>
			</div>
		</div>
		{% for c in commande %}
			<table class="table table-hover">
				<thead>
					<tr>
						
						<th class="text-center">Nom</th>
						<th class="text-center">Produit</th>
						<th class="text-center">Catégorie</th>
						<th class="text-center">Essayé le</th>
						<th class="text-center">Attribué le</th>
						<th class="text-center">Quantité</th>

						<th></th>
					</tr>
				</thead>
				<tbody>
					
					<td class="text-center">
						<a href="#">{{c.adherent.firstName}}
							{{c.adherent.lastName}}</a>
					</td>
					<td class="text-center">{{c.produit.title}}</td>
					<td class="text-center">{{c.produit.categoryproduit.title}}</td>
					{% if c.datecommande != null %}
					<td class="text-center">{{c.datecommande|date('d/m/yy')}}</td>
					{% else %}
						<td class="text-center">{{c.dateattribution|date('d/m/yy')}}</td>
					{% endif %}
					{% if c.dateattribution != null %}
					<td class="text-center">{{c.dateattribution|date('d/m/yy')}}</td>
					{% else %}
					<td class="text-center">NC</td>
					{% endif %}
						
					<td class="text-center">
						<span class="">{{c.qte}}</span>

					</td>

					<td>
						<a href="{{ path('commande_delete', {'id': c.id}) }}" class="btn btn-sm btn-danger" data-confirm="Etes vous sûr de vouloir supprimer cette commande ?">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tbody>
			</tr>
		{% endfor %}

	</tbody>
</table></div>{% endblock %}

