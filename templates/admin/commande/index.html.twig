{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}





<div class="container mt-3">
		<h1 class="text-center">Toutes les attributions d'équipements</h1>

		<div class="form-group">
			<input type="text" class="form-control" placeholder="Rechercher ..."/>

		</div>

		<div class="container">
			<div class="row">
				<div class="col-sm"></div>
				<div class="col-sm"></div>
				<div class="col-sm-3 mb-2">
					
				</div>
			</div>
		</div>
{% for c in commande %}
		<table class="table table-hover">
			<thead>
				<tr>
					<th class="text-center">Id.</th>
					<th class="text-center">Nom</th>
					<th class="text-center">Produit</th>
					<th class="text-center">Catégorie</th>
					<th class="text-center">Quantité</th>
					
					<th></th>
				</tr>
			</thead>
			<tbody>

			

					<td class="text-center">{{c.id}}</td>
					<td class="text-center">
						<a href="#">{{c.adherent.firstName}} {{c.adherent.lastName}}</a>
					</td>
					<td class="text-center">{{c.produit.title}}</td>
					<td class="text-center">{{c.produit.categoryproduit.title}}</td>
					<td class="text-center">
						<span class="badge badge-primary">{{c.qte}}</span>

					</td>
					
					<td>


						<a href="{{ path('commande_produit', {'id': c.adherent.id}) }}" class="btn btn-sm btn-primary">Voir</a>
						

						<a href="{{ path('commande_delete', {'id': c.id}) }}" class="btn btn-sm btn-danger">supprimer</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
	

</div>
    


{% endblock %}
