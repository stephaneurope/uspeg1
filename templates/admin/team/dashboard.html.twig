{% extends 'base.html.twig' %}

{% block title %}Liste d'équipes
{% endblock %}

{% block body %}
	{% set name = "Liste d'équipes" %}
	{% include "header_title.html.twig" %}

	<div class="container mt-3">
		<div class="container my-3"  style="background-color:#ECF0F1">
			<h1 class="text-center">Equipe<a class="ml-1" href="{{ path('admin_team_create') }}" class="btn btn-sm btn-success">
					<i class="fas fa-plus"></i>
				</a>
			</h1>
		</div>
		

		

		<div class="container mt3 overflow-auto table-wrapper-scroll-y-y my-custom-scrollbar-adherent">
			<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
			<thead>
				<tr>
					
					<th class="text-center">Liste d'équipes</th>
					
					

					<th></th>
				</tr>
			</thead>
			<tbody>

				{% for team in team %}

					<td class="text-center">
						<strong>{{team.name}}</strong>
					</td>
					
					
					<td class="text-center" style="width:100px;">


						<a href="{{ path('admin_team_edit', {'id': team.id}) }}" class="btn btn-sm btn-secondary">
							<i class="fas fa-pen"></i>
						</a>

						<a href="{{ path('admin_team_delete', {'id': team.id}) }}" class="btn btn-sm btn-danger" data-confirm="Etes vous sûr de vouloir supprimer cette équipe ?">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>


</div></div>{% endblock %}

