{% extends 'base.html.twig' %}

{% block title %}Packs Adhérents
{% endblock %}

{% block body %}
	{% set name = "Packs Adhérents" %}
	{% include "header_title.html.twig" %}

	<div class="container mt-3">
		<div class="container my-3">
			<h1 class="text-center">Pack Adhérent<a class="ml-1" href="{{ path('pack_create') }}" class="btn btn-sm btn-success">
					<i class="fas fa-plus"></i>
				</a>
			</h1>
		</div>
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Rechercher ..."/>

		</div>

		<div class="container">
			<div class="row">
				<div class="col-sm"></div>
				<div class="col-sm"></div>

			</div>
		</div>

		<table class="table table-hover">
			<thead>
				<tr>

					<th class="text-center">Nom du Pack</th>


					<th></th>
				</tr>
			</thead>
			<tbody>

				{% for p in pack %}


					<td class="text-center">
						<strong>{{p.name}}</strong>
					</td>

					<td>


						<a href="{{ path('pack_edit', {'id': p.id}) }}" class="btn btn-sm btn-secondary">
							<i class="fas fa-pen"></i>
						</a>

						<a href="{{ path("pack_delete", {'id': p.id}) }}" class="btn btn-sm btn-danger" data-confirm="Etes vous sûr de vouloir supprimer cette catégorie ?">
							<i class="fas fa-trash-alt"></i>
						</a>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>


</div>{% endblock %}
